{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@workspace/backend/*": ["./convex/*"],
       "@workspace/backend/modules/*": ["./modules/*"],
      "@workspace/backend/types/*": ["./types/*"],
      "@workspace/backend/erros/*": ["./erros/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
